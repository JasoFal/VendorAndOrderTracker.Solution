@{
  Layout = "_Layout";
}
<body>
  @using VendorAndOrderTracker.Models;
  <h1>List of Vendors</h1>
  @if (@Model.Count == 0)
  {
    <h3>No vendor orders currently.</h3>
  }
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
    <p>@vendor.VendorDescription</p>
  }
  <p><a href='/'>Back home</p>
  <p><a href='/vendors/new'>Add new vendor</a></p>
</body>