@{
  Layout = "_Layout";
}
<body>
  <h3>Add a new order from @Model.VendorName</h3>
  <form action='/vendors/@Model.Id/orders' method='post'>
    <input id='vendorId' name='vendorId' type='hidden' value='@Model.Id'>
    <label for='orderTitle'>Enter order title:</label>
    <input id='orderTitle' name='orderTitle' type='text' required>
    <br>
    <label for='orderDescription'>Enter order details:</label>
    <input id='orderDescription' name='orderDescription' type='text' required>
    <br>
    <label for='orderPrice'>Enter order price:</label>
    <input id='orderPrice' name='orderPrice' type='number' step='.01' min='0.01' required>
    <br>
    <p>Enter order due date</p>
    <label for='orderMonth'></label>
    <input id='orderMonth' name='orderMonth' type='number' placeholder='mm' min=1 max=12 required>
    <label for='orderDay'></label>
    <input id='orderDay' name='orderDay' type='number' placeholder='dd' min=1 max=31 required>
    <label for='orderYear'></label>
    <input id='orderYear' name='orderYear' type='number' placeholder='yyyy' min=1000 max=2300 required>
    <br>
    <button type='submit'>Add Order</button>
  </form>
</body>